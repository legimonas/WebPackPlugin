<idea-plugin>
    <id>by.bsu.webpack</id>
    <name>Plugin display name here</name>
    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                factoryClass="by.bsu.webpack.explorer.ui.ExplorerWindowFactory"
                id="Web Pack"
                anchor="right"/>

        <applicationService
                serviceInterface="by.bsu.webpack.crudable.DataProvider"
                serviceImplementation="by.bsu.webpack.crudable.DataProviderImpl"/>

        <applicationService serviceImplementation="by.bsu.webpack.explorer.ui.GlobalExporerContent"/>

        <applicationService
                serviceInterface="by.bsu.webpack.explorer.ui.Explorer"
                serviceImplementation="by.bsu.webpack.explorer.ui.GlobalExplorer"/>

        <postStartupActivity implementation="by.bsu.webpack.explorer.FindConfigActivity"/>
    </extensions>

    <actions>
        
        <action id="by.bsu.webpack.explorer.actions.NewControllerAction"
                class="by.bsu.webpack.explorer.actions.NewControllerAction" text="Controller" popup="true"/>

        <action id="by.bsu.webpack.explorer.actions.NewEntityAction"
                class="by.bsu.webpack.explorer.actions.NewEntityAction" text="Entity" popup="true"/>

        <action id="by.bsu.webpack.explorer.actions.NewMemberAction"
                class="by.bsu.webpack.explorer.actions.NewMemberAction" text="Member" popup="true"/>

        <action id="by.bsu.webpack.explorer.actions.NewClassifierAction"
                class="by.bsu.webpack.explorer.actions.NewClassifierAction" text="Classifier" popup="true"/>

        <group id="NewGlobalExplorerGroup" text="New" popup="true">
            <reference id="by.bsu.webpack.explorer.actions.NewControllerAction"/>
            <reference id="by.bsu.webpack.explorer.actions.NewEntityAction"/>
            <reference id="by.bsu.webpack.explorer.actions.NewMemberAction"/>
            <reference id="by.bsu.webpack.explorer.actions.NewClassifierAction"/>
        </group>

        <group id="GlobalExplorerTreePopupMenuGroup">
            <reference id="NewGlobalExplorerGroup"/>
        </group>
    </actions>

</idea-plugin>